}
.case_show{
	margin-top:50rpx;
}
.recommend_left{
	width:48.5%;
	height:270rpx;
	border-radius: 10rpx;
}
.recommend_left image{
	width:100%;
	height: 210rpx;
}
.product_name image{
	width:22rpx;
	height:22rpx;
	margin-right:10rpx;
}
.index_product{
	flex-wrap: wrap;
}
