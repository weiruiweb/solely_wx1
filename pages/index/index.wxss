@import "../../wxParse/wxParse.wxss"
.banner{
	width:100%;
	height:360rpx;
	overflow: hidden;
}
.banner image{
	width:100%;
	height:100%;
}

.great{
	width:100%;
	height:318rpx;
	border-top:solid 1px #e0e0e0;
	border-bottom:solid 1px #e0e0e0;
	margin-top: 44rpx;
}
.great_left{
	width:50%;
	height:100%;
	border-right:solid 1px #e0e0e0;
}
.great_right{
	width:50%;
	height:100%;
}
.left_cont{
	width:90%;
	height:250;
	margin:0 auto;
}
.left_cont image{
	float: right;
}
.great_left image{
	width:100%;
	height:146rpx;
	border-radius: 10rpx;
	margin:10rpx 0;
}
